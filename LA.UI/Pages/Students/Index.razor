@page "/students/index"
@if (Students is null)
{
    <p><em>Loading ...</em></p>
}
else
{
    <div>
        <a href="students/create">Create a new student</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Students)
            {
            <tr>
                <th scope="row">@student.Id</th>
                <th scope="row">@student.Name</th>
                <th scope="row">@student.Email</th>
                <th scope="row"><a >Action</a></th>
            </tr>
            }

        </tbody>
    </table>
}
